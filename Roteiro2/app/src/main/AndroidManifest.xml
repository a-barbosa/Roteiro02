<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vsouz.roteiro2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <activity android:name=".TraduzirInglesActivity" android:label="Inglês">
            <intent-filter>
                <action android:name="Traduzir" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="TraduzirIngles"/>
            </intent-filter>

        </activity>


        <activity android:name=".TraduzirFrancesActivity" android:label="Frânces">
        <intent-filter>
            <action android:name="Traduzir" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="TraduzirFrances"/>
        </intent-filter>
        </activity>
    </application>

</manifest>
